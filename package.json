{
  "name": "webfudge-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=!backend",
    "dev:all": "turbo run dev",
    "dev:backend": "turbo run dev --filter=backend",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "verify": "node verify-setup.js"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.5",
  "dependencies": {
    "ajv": "^8.0.0"
  }
}
